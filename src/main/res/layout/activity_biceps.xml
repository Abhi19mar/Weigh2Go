            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bicep4"
            android:layout_marginTop="1550dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a)First, select any inclined surface in your house.\nb)Then puts your both legs on the inclined surface and keep both hands on the floor.\nc)After this straighten your back and start lowering down your upper body with bending your elbows.\nd)Then hold your body below for a second and then lift your body by straightening your hands.\ne)Repeat it for more repetitions."
            android:layout_marginTop="2305dp"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2530dp"
            android:textStyle="bold"
            android:text="\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t5.REVERSE PUSH-UPS"
